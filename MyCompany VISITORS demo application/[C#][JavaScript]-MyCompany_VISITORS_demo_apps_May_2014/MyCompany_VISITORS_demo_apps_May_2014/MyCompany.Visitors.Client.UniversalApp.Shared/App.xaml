<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="MyCompany.Visitors.Client.UniversalApp.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="using:MyCompany.Visitors.Client.UniversalApp" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
             xmlns:vm="using:MyCompany.Visitors.Client.UniversalApp.ViewModel"             
             mc:Ignorable="d"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator"></vm:ViewModelLocator>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/Colors.xaml" />
                <ResourceDictionary Source="Common/CommonTemplates.xaml" />
                <ResourceDictionary Source="Common/CommonStyles.xaml" />
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
                <ResourceDictionary Source="Common/ButtonStyles.xaml" />
                <ResourceDictionary Source="Common/TextBlockStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>            
        </ResourceDictionary>
    </Application.Resources>
</Application>