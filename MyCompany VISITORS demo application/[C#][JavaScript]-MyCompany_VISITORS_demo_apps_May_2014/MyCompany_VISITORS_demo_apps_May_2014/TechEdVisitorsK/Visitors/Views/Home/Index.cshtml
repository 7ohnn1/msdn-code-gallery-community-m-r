@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Visitors | MyCompany</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/favicon.ico" type="image/ico" />

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/durandal.css" />
    <link rel="stylesheet" href="~/Content/select2/select2.css" />
    <link rel="stylesheet" href="~/Content/imgareaselect-animated.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <link rel="stylesheet" href="~/Content/toastr.css" />
    <link rel="stylesheet" href="~/Content/visitorForm.css" />
    <link rel="stylesheet" href="~/Content/list.css" />
    <link rel="stylesheet" href="~/Content/visitors.css" />
    <link rel="stylesheet" href="~/Content/visits.css" />
    <link rel="stylesheet" href="~/Content/messageBox.css" />
    <link rel="stylesheet" href="~/Content/visitorDetail.css" />
    <link rel="stylesheet" href="~/Content/visitDetail.css" />
    <link rel="stylesheet" href="~/Content/visitForm.css" />

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
    <script type="text/javascript" src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div id="applicationHost" ng-app="app" ng-controller="MainController">
        <div class="progress-container" ng-if="showSplash">
            <img src="@Url.Content("~/Content/Images/logo.png")" alt="My Company logo" />
            <div class="progress progress-danger progress-striped active">
                <div class="bar" style="width: 100%"></div>
            </div>
        </div>
        <div ng-show="!showSplash">
            <!-- Button to avoid ie to get signout as default action -->
            <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;" />
            <div class="loading-background" ng-show="isBusy">
                <div class="loading">
                    <div id="fountainG_1" class="fountainG">
                    </div>
                    <div id="fountainG_2" class="fountainG">
                    </div>
                    <div id="fountainG_3" class="fountainG">
                    </div>
                    <div id="fountainG_4" class="fountainG">
                    </div>
                    <div id="fountainG_5" class="fountainG">
                    </div>
                    <div id="fountainG_6" class="fountainG">
                    </div>
                    <div id="fountainG_7" class="fountainG">
                    </div>
                    <div id="fountainG_8" class="fountainG">
                    </div>
                </div>
            </div>
            <div id="main-container" ng-cloak>
                <header>
                    <div class="container-fluid">
                        <div class="row-fluid">
                            <div class="span6">
                                <a class="brand" href="#"></a>
                            </div>
                            <div class="span6">
                                <section class="user-data" ng-controller="UserController">
                                    <a href="#" title="sign out">
                                        <button class="button-primary button-right">Sign out</button>
                                    </a>
                                    <img ng-src="{{employee.picture}}" />
                                    <span class="user-name">{{employee.fullName}}</span>
                                </section>
                            </div>
                        </div>
                        <div class="content-nav-buttons">
                            <nav class="btn-group">
                                <div class="content-nav-button active">
                                    <div class="icon"></div>
                                    <a href="#" class="nav-button">Visitors</a>
                                </div>
                            </nav>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </header>
                <section id="content" class="main container-fluid" ng-controller="VisitorsController" ng-cloak>
                    <section class="view">
                        <header>
                            <div class="content-input">
                                <input autofocus="autofocus" class="input-search" type="text" ng-model="filter" mc-keyup-throttle="search()">
                            </div>
                            <div class="content-statistics">
                                <div class="subcontent-statistics">
                                    <span class="words-statistics">You have visitors</span>
                                </div>
                                <div class="main-number-statistics">
                                    <span ng-bind="totalVisitors"></span>
                                </div>
                                <button class="refresh-button" ng-click="refresh()"></button>
                                <div class="clear"></div>
                            </div>
                            <div class="clear"></div>
                        </header>
                        <section class="list-no-articles" ng-if="totalVisitors === 0">
                            No records found
                        </section>
                        <section ng-if="totalVisitors > 0">
                            <article class="article-of-list" ng-repeat="visitor in visitors">
                                <div class="avatar">
                                    <img class="avatar-img" ng-src="{{visitor.picture}}" alt="visitor photo" />
                                </div>
                                <div class="dates">
                                    <span class="name">{{visitor.fullName}}</span>
                                    <br />
                                    <span class="company-name">{{visitor.company}}</span>
                                </div>
                                <div class="dates-statistics">
                                    <div class="row-label">
                                        <span>Position</span>
                                        <span>Email</span>
                                    </div>
                                    <div class="date-info">
                                        <span>{{visitor.position}}</span>
                                        <span>{{visitor.email}}</span>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <button class="button-box button-info" type="button" title="Open detail view"></button>
                                <button class="button-box button-edit" type="button" title="Edit visitor"></button>
                                <button class="button-box button-delete" type="button" title="Delete visitor"></button>
                                <div class="clear"></div>
                            </article>
                        </section>
                    </section>
                </section>
            </div>
        </div>
    </div>
    <script src="/Scripts/jquery-1.10.2.js"></script>
    <script src="/Scripts/angular.js"></script>

    <script src="/App/app.js"></script>
    <script src="/App/controllers.js"></script>
    <script src="/App/services.js"></script>
    <script src="/App/directives.js"></script>

</body>
</html>