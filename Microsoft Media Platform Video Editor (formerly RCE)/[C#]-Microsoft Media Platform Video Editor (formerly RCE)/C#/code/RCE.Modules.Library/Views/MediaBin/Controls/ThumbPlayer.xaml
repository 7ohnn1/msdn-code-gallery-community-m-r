<UserControl x:Class="RCE.Modules.Library.Views.MediaBin.Controls.ThumbPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="63" d:DesignWidth="112" Loaded="UserControl_Loaded">
    
    <Canvas x:Name="LayoutRoot" Background="Transparent">
        <Border Width="112" Height="63" Background="Black" Canvas.ZIndex="1000" x:Name="LoadingContainer"> 
        <TextBlock Text="Loading..." Foreground="White" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </Canvas>
</UserControl>
