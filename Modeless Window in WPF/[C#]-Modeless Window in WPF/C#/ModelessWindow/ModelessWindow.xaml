<Window x:Class="ModelessWindow.ModelessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modeless Window" Height="300" Width="300">
  <StackPanel>
    <TextBlock Text="Modeless Window"/>
    <UniformGrid Columns="2">
      <Button Content="OK" Click="OK_Click" Margin="10"/>
      <Button Content="Cancel" Click="Cancel_Click" Margin="10"/>
    </UniformGrid>
  </StackPanel>
</Window>
