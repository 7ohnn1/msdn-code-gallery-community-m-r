@using System.Web
@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>MyCompany Vacations</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <base href="@Url.Content("~")" />

    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/styles")
    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
    @Scripts.Render("~/scripts/modernizr")
</head>
    <body>
        <div id="spApplicationBar">
            You are connected through Sharepoint as @ViewBag.UserName
        </div>
        <div id="applicationHost">
            @RenderPage("_splash.cshtml")
        </div>

        @Scripts.Render("~/scripts/vendor")
        
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>
        <script src="@Url.Content("~/App/durandal/amd/require.js")" data-main="@Url.Content("~/App/main")"></script>
    </body>
</html>
