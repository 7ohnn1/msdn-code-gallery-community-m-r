@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>MyCompany Vacations</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <base href="@Url.Content("~")" />

    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/styles")
    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
    @Scripts.Render("~/scripts/modernizr")
</head>
<body ng-app="vacationApp" ng-controller="MainController">
    @*<div id="spApplicationBar">
        You are connected through Sharepoint as @ViewBag.UserName
    </div>*@
    <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;" />
    <div class="loading-background" ng-show="isBusy">
        <div class="loading">
            <div id="fountainG_1" class="fountainG">
            </div>
            <div id="fountainG_2" class="fountainG">
            </div>
            <div id="fountainG_3" class="fountainG">
            </div>
            <div id="fountainG_4" class="fountainG">
            </div>
            <div id="fountainG_5" class="fountainG">
            </div>
            <div id="fountainG_6" class="fountainG">
            </div>
            <div id="fountainG_7" class="fountainG">
            </div>
            <div id="fountainG_8" class="fountainG">
            </div>
        </div>
    </div>
    <div id="main-container">
        <header>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span6">
                        <a class="brand" href="Home/Angular"></a>
                    </div>
                    <div class="span6">
                        <section ng-controller="UserController" class="user-data">
                            <a href="Account/SignOut" title="sign out">
                                <button class="button-primary button-right">Sign out</button>
                            </a>
                            <img ng-src="{{user.picture}}" />
                            <span class="user-name" ng-bind="user.fullName"></span>
                        </section>
                    </div>
                </div>
                <div ng-controller="NavigationController">
                    <div class="content-nav-buttons">
                        <nav class="btn-group">
                            @*<a href="http://www.microsoft.com">
                                    <div class="content-nav-button">
                                        <span class="nav-button">About</span>
                                    </div>
                                </a>*@
                            <a ng-repeat="page in pages" ng-show="page.visible" ng-href="{{page.url}}">
                                <div class="content-nav-button" data-bind="css: { active: isActive }" ng-class="{active: isActive(page)}">
                                    <div class="{{page.iconClass}}">
                                        <span class="nav-button" ng-bind="page.display"></span>
                                    </div>
                                </div>
                            </a>
                        </nav>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </header>
        <section ng-view id="content" class="main container-fluid"></section>
    </div>

    @Scripts.Render("~/scripts/angularAppVendor")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/scripts/angularApp")

</body>
</html>
